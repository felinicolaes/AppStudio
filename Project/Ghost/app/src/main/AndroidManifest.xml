<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.feli.ghost" >

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainGame"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_main_game" >
        </activity>
        <activity
            android:name=".HowTo"
            android:label="@string/title_activity_how_to" >
        </activity>
        <activity
            android:name=".Highscores"
            android:label="@string/title_activity_highscores" >
        </activity>
        <activity
            android:name=".PickPlayer"
            android:label="@string/title_activity_pick_player" >
        </activity>
        <activity
            android:name=".WinScreen"
            android:label="@string/title_activity_win_screen" >
        </activity>
        <activity
            android:name=".GetOldPlayer"
            android:label="@string/title_activity_get_old_player" >
        </activity>
    </application>

</manifest>
